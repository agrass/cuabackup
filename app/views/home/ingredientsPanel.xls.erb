<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">Nombre</Data></Cell>
        <Cell><Data ss:Type="String">Cantidad Total</Data></Cell>
        <Cell><Data ss:Type="String">Unidad</Data></Cell>
      </Row>
    <% @ingredients.each do |ingredient| %>
      <Row>
        <Cell><Data ss:Type="String"><%= ingredient.nombre %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= ingredient.cantidad_total %></Data></Cell>
        <Cell><Data ss:Type="String"><%= ingredient.unidad %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>