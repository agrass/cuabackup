.tabbable
  / Only required for left/right tabs
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#tab1"} Areas
    %li
      %a{"data-toggle" => "tab", :href => "#tab2"} Vouchers
    %li
      %a{"data-toggle" => "tab", :href => "#tab3"} Compras
    %li
      %a{"data-toggle" => "tab", :href => "#tab4"} Estadisticas

  .tab-content{ :style => "overflow: hidden;"}
    #tab1.tab-pane
      = label_tag(:fecha, "Fecha:")
      %input{"data-behaviour" => "datepicker", :type => "text", :data_url => "#{order_lists_path}"}
      #accordion2.accordion
        - Area.all.each do |area|
          .accordion-group
            .accordion-heading
              %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#area#{area.id}"}
                #{area.nombre}
            .accordion-body.collapse.in{ :id => "area#{area.id}"}
              .accordion-inner
                
                
        
    #tab2.tab-pane
      Vouchers
    #tab3.tab-pane
      Compras
    #tab4.tab-pane
      %h2 Estadisticas
      = label_tag(:fecha, "Fecha:")
      %input{"data-behaviour" => "datepicker", :type => "text", :data_url => "#{regime_stats_path}"}/
      :javascript
        $(function() {
        $('[data-behaviour~=datepicker]').datepicker({
          format: 'dd/mm/yyyy'
        }).on('changeDate', function(ev) {
          url = '#{regime_stats_path}?date=' + $(this).val();
          $.get(url, function(data) {
            $('#estadistica').html(data);
            });
          return true;
        });
        // $('[data-behaviour~=datepicker]').val("#{@date}")

        });
      %div#estadistica

