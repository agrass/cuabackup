= link_to image_tag("images/logo2.jpg"), root_path, :class => 'brand2'

%ul.nav
  - if user_signed_in?
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = link_to 'Login', new_user_session_path
  - if user_signed_in?
    %li
      = link_to 'Editar Cuenta', edit_user_registration_path
    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', users_path
      %li
        = link_to 'Regimenes', regimes_path
      %li
        = link_to 'Platos', plates_path
      %li
        = link_to 'Ingredientes', ingredients_path

    - if current_user.has_role? :nutricionista
      %li
        = link_to 'Pacientes', patients_path
      %li
        = link_to 'Pedidos', orders_path
  - else
    %li
      = link_to 'Sign up', new_user_registration_path
