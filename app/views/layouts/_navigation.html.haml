    .logo_head
      %a{:href => "/", :title => "Ir al home"} Clínica Universidad de Los Andes
    #menu_sec
      #menu_sec_content
        %ul.rtsUL
          - if user_signed_in? 
            %li.rtsLI.rtsFirst
              %a.rtsLink{:href => "#{edit_user_registration_path}"}
                %span.rtsOut
                  %span.rtsIn
                    %span.rtsTxt
                      %i.icon-pencil
