                  %span.rtsIn
                    %span.rtsTxt
                    %i.icon-off
                    Cerrar Sesion
          - else
            %li.rtsLI
              %a.rtsLink{:href => "#{new_user_registration_path}"}
                %span.rtsOut
                  %span.rtsIn
                    %span.rtsTxt Registrarse                    
            %li.rtsLI
              %a.rtsLink{:href => "#{new_user_session_path}"}
                %span.rtsOut
                  %span.rtsIn
                    %span.rtsTxt Ingresar
