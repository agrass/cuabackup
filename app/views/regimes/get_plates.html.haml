  - j = 1
  - Plate.obtener_tipos(@horario.to_i).each do |tipo|
    %li{ :class => "#{ Plate.obtener_tipos(@horario.to_i)[0][1] == tipo[1] ? 'active' : ''}" }
      %a{href: "#tab#{tipo[1]}", "data-toggle" => "tab", :number => "#{j}"} #{tipo[0]}
