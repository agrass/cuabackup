%h1 Listing regimes

%table.table-hover
  %tr
    %th Nombre
    %th
    %th
    %th

  - @regimes.each do |regime|
    %tr
      %td= regime.nombre      
      %td
        %a.btn{ :href => "#{regime_path(regime)}"}
          Detalles
      %td
        %a.btn{ :href => "#{edit_regime_path(regime)}"}
          %i.icon-edit
          Editar      
      %td
        %a.btn.btn-danger{ :href => "#{regime_path(regime)}", "data-method" => :delete, :data => { :confirm => 'Are you sure?' }}
          %i.icon-remove   


%hr

%a.btn.btn-primary{ :href => "#{new_regime_path}", "data-method" => :delete, :data => { :confirm => 'Are you sure?' }}
  %i.icon-plus
  Nuevo Regimen

