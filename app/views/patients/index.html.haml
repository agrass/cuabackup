%legend Pacientes

%table.table.table-condensed
  %tr
    %th Nombre
    %th Num pieza
    %th
    %th
    %th

  - @patients.each do |patient|
    %tr
      %td= patient.nombre
      %td= patient.num_pieza
      %td
        = link_to(patient, "data-toggle" => "tooltip", :title => "Ver") do
          %i.icon-hand-up
      %td
        = link_to(edit_patient_path(patient), "data-toggle" => "tooltip", :title => "Editar") do
          %i.icon-pencil
      %td
        = link_to(patient, "data-toggle" => "tooltip", :title => "Eliminar", :method => :delete, :data => { :confirm => 'Are you sure?' }) do
          %i.icon-trash

%br

= link_to 'New Patient', new_patient_path
